                    <Rectangle.Resources>
                        <SolidColorBrush x:Key="BlackBrush" Color="Gray" />
                    </Rectangle.Resources>
                    <Rectangle.Fill>
                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_check}" />
                    </Rectangle.Fill>
                </Rectangle>
            </StackPanel>
        </Button>
    </Grid>
